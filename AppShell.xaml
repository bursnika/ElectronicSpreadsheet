<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ElectronicSpreadsheet.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ElectronicSpreadsheet"
    xmlns:pages="clr-namespace:ElectronicSpreadsheet.Views.Pages"
    Title="Електронні таблиці">

    <TabBar>
        <ShellContent
            Title="Таблиця"
            Icon="grid.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Довідка"
            Icon="help.png"
            ContentTemplate="{DataTemplate pages:HelpPage}"
            Route="HelpPage" />

    </TabBar>

</Shell>
